# Configurações PostgreSQL + Redis
# Para usar esta configuração, copie para .env

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=osh_user
POSTGRES_PASSWORD=osh_password_2024
POSTGRES_DB=osh_db

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=osh_redis_2024

# Database Mode (postgres, mariadb, hybrid)
DB_MODE=postgres

# Configurações do Servidor
PORT=3001
NODE_ENV=development

# JWT Secret
JWT_SECRET=your-super-secure-jwt-secret-key-here

# CORS
CORS_ORIGIN=http://localhost:5174

# Cache TTL (em segundos)
CACHE_TTL_DEFAULT=3600
CACHE_TTL_USER=1800
CACHE_TTL_HOTEL=7200

# Pool de Conexões PostgreSQL
PG_POOL_MIN=5
PG_POOL_MAX=50
PG_POOL_IDLE_TIMEOUT=30000
PG_POOL_CONNECTION_TIMEOUT=10000